pipeline {
    agent any
    tools {
        maven 'Maven 3.8.6'
        jdk 'JDK11'
    }
    stages {
        stage('Clonar') {
            steps {
                git 'https://github.com/andreaendigital/taskmaster_maven'
            }
        }
        stage('Compilar') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Probar') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Empaquetar') {
            steps {
                sh 'mvn package'
            }
        }
    }
    post {
        success {
            echo "ğŸ‰ El build fue exitoso"
        }
        failure {
            echo "ğŸ’¥ El build fallÃ³"
        }
    }
}